<Configuration status="INFO" shutdownHook="disable">
  <LoggingConfigFilter/>
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %class{36} %L %M - %msg%xEx%n"/>
    </Console>
    <DxKafkaAppender name="Kafka" topic="logging"/>
    <Async name="AsyncAppenders" includeLocation="true">
      <AppenderRef ref="Kafka"/>
      <!-- <AppenderRef ref="Console"/> -->
    </Async>
  </Appenders>
  <Loggers>
    <Logger name="com.ibm.dx.publishing.connectorservice" level="trace">
      <AppenderRef ref="Console" />
    </Logger>
    <Root level="info">
      <AppenderRef ref="AsyncAppenders"/>
    </Root>
  </Loggers>
</Configuration>
