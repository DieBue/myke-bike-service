<Configuration status="warn">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <!-- plain text
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %class{36} %L %M - %msg%xEx%n"/>
            -->
            <!-- with ANSI colors -->
            <PatternLayout pattern="%highlight{%d{HH:mm:ss.SSS} [%t] %-5level %class{36} %L %M - %msg%xEx%n}"/>
        </Console>
        <RollingFile append="false" name="RollingFile" fileName="C:\src\prisma\trace.log"
			filePattern="logs/$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log.gz">
			<PatternLayout>
				<pattern>%d{HH:mm:ss.SSS} [%t] %-5level %class{36} %L %M - %msg%xEx%n</pattern>
			</PatternLayout>
			<Policies>
				<SizeBasedTriggeringPolicy size="100 MB" />
			</Policies>
			<DefaultRolloverStrategy max="2" />
		</RollingFile>
        
    </Appenders>
    <Loggers>
        <!-- add additional loggers that with more verbose log levels as needed -->
        <!--<Logger name="test.publishing" level="trace" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>-->
        <Logger name="com" level="info" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>